<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8" />
    <title>Conversations</title>

    <!-- Bootstrap & Icons via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Chat bubble width limits */
        #messagePane div.text-start .d-inline-block {max-width: 70%;}
        #messagePane div.text-end   .d-inline-block {max-width: 70%;}
    </style>
</head>
<body class="bg-light">
<div class="container-fluid py-3">
    <!-- Top bar -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a th:href="@{/}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        <h2 class="m-0">Conversations</h2>
    </div>

    <!-- Conversation list -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <ul id="conversation-list" class="list-group list-group-flush shadow-sm">
                <a th:each="conv : ${conversations}"
                   th:href="@{/conversation/{id}(id=${conv.id})}"
                   class="list-group-item list-group-item-action"
                   th:id="'conv-' + ${conv.id}">
                    <div class="d-flex justify-content-between">
                        <span th:text="'Conversation #' + ${conv.id}">Conversation #1</span>
                        <small class="text-muted" th:text="${#dates.format(conv.lastUpdated,'HH:mm')}">--:--</small>
                    </div>
                </a>
            </ul>
        </div>
    </div>
</div>
</body>
</html>
